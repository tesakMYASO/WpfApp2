<Window x:Class="RandomNumberMaxFinder.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Максимум случайных чисел" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>
        <Label Content="Введите количество чисел (n):" Margin="10,22,0,0" HorizontalAlignment="Left" Grid.RowSpan="2"/>
        <TextBox Name="CountTextBox" Width="151" Margin="203,33,0,35" HorizontalAlignment="Left"/>
        <Button Content="Сгенерировать" Width="100" Margin="10,50,0,0" HorizontalAlignment="Left" Click="GenerateButton_Click" Grid.RowSpan="2"/>
        <TextBlock Name="NumbersTextBlock" Margin="115,32,0,0" TextWrapping="Wrap" Grid.Row="1"/>
        <Label Content="Максимум:" Margin="25,32,0,0" HorizontalAlignment="Left" Grid.Row="1"/>
        <TextBlock Name="MaxTextBlock" Margin="115,32,0,0" TextWrapping="Wrap" Grid.Row="1"/>
        <Button Content="Очистить" HorizontalAlignment="Left" Margin="203,68,0,0" VerticalAlignment="Top" Width="151" Click="Button_Click_2"/>
        <Menu Margin="0,0,0,70">
            <MenuItem Header="O программе " Click="Button_Click"/>
            <MenuItem Header="Выход" Click="Button_Click"/>
        </Menu>

    </Grid>
</Window>